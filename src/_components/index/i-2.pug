section.hinohome2.section
	.container
		.row
			.col-xl-6
				.hinohome2__slide
					ul
						li
							a(href="") Video
						li
							a(href="") Hình ảnh
					.swiper-container.hinohome2__slide__top
						.swiper-wrapper
							-for(i=1; i<7; i++)
