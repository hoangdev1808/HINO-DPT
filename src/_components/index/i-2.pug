<!-- Giới thiệu -->
section.hinohome2.section
	.container
		ul.tabs
			li.active(rel="panel-1") Video
			li(rel="panel-2") Hình ảnh
		.row
			.col-xl-6
				.panel.active#panel-1
					.hinohome2__slide
						.swiper-container.hinohome2__slide__top
							.swiper-wrapper
								-for(i=1; i<7; i++)
									.swiper-slide
										.img
											img(src="./assets/images/home/nl-"+i+".png" alt="")
											.icon-control
												a(href="https://www.youtube.com/watch?v=09iHunBivys" data-fancybox)
												img(src="./assets/icons/play-button.png", alt="")
						.swiper-container-thumbs.hinohome2__slide__thumbs
							.swiper-wrapper
								-for(i=1; i<7; i++)
									.swiper-slide
										.img
											img(src="./assets/images/home/nl-"+i+".png" alt="")
											.icon-control
												img(src="./assets/icons/play-button.png", alt="")
				.panel#panel-2
					.hinohome2__img
						.swiper-container.hinohome2__img__top
							.swiper-wrapper
								-for(i=1; i<7; i++)
									.swiper-slide
										.img
											img(src="./assets/images/home/nl-"+i+".png" alt="")
											.icon-control
												a(href="https://www.youtube.com/watch?v=09iHunBivys" data-fancybox)
													img(src="./assets/icons/play-button.png", alt="")
						.swiper-container-thumbs.hinohome2__img__thumbs
							.swiper-wrapper
								-for(i=1; i<7; i++)
									.swiper-slide
										.img
											img(src="./assets/images/home/nl-"+i+".png" alt="")
											.icon-control
												img(src="./assets/icons/play-button.png", alt="")
			.col-xl-6
				.hinohome2__content
					.block-title
						h1 Năng lực sẳn xuất
					ul
						li
							p Sản phẩm mang tính thẩm mỹ cao
						li
							p Xưởng đóng thùng xe tải, bảo ôn, đông lạnh uy tín, chất lượng, đươc nhiều khách hàng khắp cả nước lựa chọn
						li
							p Đa dạng chất liệu và kỹ thuật
						li
							p Trang thiết bị, máy móc, cơ sở, và đặc biệt là đội ngũ nhân viên kỹ thuật có tay nghề
					a.btn.btn__new(href="") XEM THÊM
